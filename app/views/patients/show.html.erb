<h1>Patients</h1>

<p>Appointments:</p>
    <ul>
        <% @patient.appointments.each do |app| %>
            <li><%= app.appointment_datetime.strftime("%B %e, %Y at %H:%M") %></li>
        <% end %>

        <% @patient.doctors.each do |d| %>
            <li><%= link_to d.name, doctor_path(d) %></li>
    <% end %>
    </ul>